
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public creation of leads, but no one can read, update, or delete them.
    match /leads/{leadId} {
      allow read, update, delete: if request.auth != null && false; // Keep restricted
      allow create: if true; // Public can create leads
    }

    // Example of a collection that would require auth
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
